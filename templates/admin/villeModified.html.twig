{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Modification Ville
{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex flex-column align-items-center">
            <h1 class="flex-row">Modification de la ville de {{ ville.nom}} </h1>
            <div class="flex-row">
                {{ form_start(villeForm) }}
                {{ form_widget(villeForm) }}
                <button>Enregister</button>
                <a href="{{ path('admin_ville') }}" class="btn btn-danger">Annuler</a>
                {{ form_end(villeForm) }}
            </div>
        </div>
    </div>
{% endblock %}