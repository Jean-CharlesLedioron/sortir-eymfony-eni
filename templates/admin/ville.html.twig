{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Villes
{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex flex-column align-items-center">
            <h1 class="flex-row">Liste des villes</h1>
        </div>

        <div class="row">
            {{ form_start(formVille) }}
            <div class="col md 4">
                {{ form_row(formVille.ville) }}
                <button>Rechercher</button>
            </div>
            {{ form_end(formVille) }}
        </div>

        <div class="container">
            <table id="dtDynamicVerticalScrollExample" class="table table-striped table-bordered table-sm ">
                <tr>
                    <th>Villes</th>
                    <th>Code Postal</th>
                    <th>Action</th>
                </tr>
                {% for ville in villes %}
                    <tr>
                        <td>{{ ville.nom }}</td>
                        <td>{{ ville.codePostal }}</td>
                        <td>Action</td>
                    </tr>
                {% endfor %}
                <tr>
                    {{ form_start(addvilleForm) }}
                    <td>{{ form_row(addvilleForm.nom) }}</td>
                    <td>{{ form_row(addvilleForm.codePostal) }}</td>
                    <td><button>Ajouter</button></td>
                    {{ form_end(addvilleForm) }}
                </tr>
            </table>
        </div>
    </div>
{% endblock %}