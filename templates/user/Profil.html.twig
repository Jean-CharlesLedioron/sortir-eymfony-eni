{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Profil de {{ participant.pseudo }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex flex-column align-items-center">
            <h1 class="flex-row">{{ participant.pseudo }}</h1>
            <div class="flex-row">
                Prénom : {{ participant.prenom }}<br>
                Nom : {{ participant.nom }}<br>
                {% if participant.telephone %}
                    Téléphone : {{ participant.telephone }}<br>
                {% else %}
                    Téléphone : Le numéro de ce participant n'a pas était fourni <br>
                {% endif %}
                Email : {{ participant.mail }}<br>
                Campus : {{ participant.campus.nom }}<br>
                <a class="btn btn-primary" href="{{ path('main_home') }}" role="button">Retour Accueil</a>
            </div>
        </div>
    </div>
{% endblock %}